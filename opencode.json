{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "specs/inst.*.md"
  ],
  "plugin": [
    "@mohak34/opencode-notifier@latest",
  ],
  "agent": {
    "build": {
      "disable": true
    },
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ]
    }
  },
  "tools": {
    "write": true,
    "bash": true,
    "webfetch": true
  },
  "permission": {
    "bash": {
      "*": "allow",
      "awk": "allow",
      "bc": "allow",
      "bun --version": "allow",
      "bun -e *: *": "allow",
      "bun add *": "allow",
      "bun build": "allow",
      "bun run *": "allow",
      "bun test *": "allow",
      "bun tsc *": "allow",
      "bunx *": "allow",
      "cat": "allow",
      "cp": "allow",
      "curl": "allow",
      "cut": "allow",
      "find": "allow",
      "git add": "allow",
      "git commit": "allow",
      "git diff": "allow",
      "git fetch": "allow",
      "git pull": "allow",
      "git push": "ask",
      "git rebase": "ask",
      "git reset": "ask",
      "grep": "allow",
      "head": "allow",
      "join": "allow",
      "jq": "allow",
      "ls": "allow",
      "mkdir": "allow",
      "mv": "allow",
      "nl": "allow",
      "npx *": "deny",
      "paste": "allow",
      "ps": "allow",
      "pwd": "allow",
      "python3": "deny",
      "rm": "allow",
      "rmdir": "allow",
      "sed": "allow",
      "sleep": "allow",
      "sort": "allow",
      "split": "allow",
      "tail": "allow",
      "tee": "allow",
      "touch": "allow",
      "tr": "allow",
      "uniq": "allow",
      "wc": "allow"
    },
    "external_directory": "deny",
  }
}