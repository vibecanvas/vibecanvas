{
    "$schema": "https://opencode.ai/config.json",
    "instructions": ["docs/pixi.llm.md"],
    "plugin": ["@mohak34/opencode-notifier@latest", "@nick-vi/opencode-type-inject"],
    "tools": {
      "write": true,
      "bash": true,
      "webfetch": true
    },
    "permission": {
      "database_*": "deny",
      "bash": {
        "*": "allow",
        "awk": "allow",
        "bc": "allow",
        "bun --version": "allow",
        "bun -e *: *": "allow",
        "bun add *": "allow",
        "bun build": "allow",
        "bun run *": "allow",
        "bun test *": "allow",
        "bun tsc *": "allow",
        "bunx *": "allow",
        "cat": "allow",
        "cp": "allow",
        "curl": "allow",
        "cut": "allow",
        "find": "allow",
        "git add": "allow",
        "git commit": "allow",
        "git diff": "allow",
        "git fetch": "allow",
        "git pull": "allow",
        "git push": "ask",
        "git rebase": "ask",
        "git reset": "ask",
        "grep": "allow",
        "head": "allow",
        "join": "allow",
        "jq": "allow",
        "ls": "allow",
        "mkdir": "allow",
        "mv": "allow",
        "nl": "allow",
        "npx *": "deny",
        "paste": "allow",
        "ps": "allow",
        "pwd": "allow",
        "python3": "deny",
        "rm": "allow",
        "rmdir": "allow",
        "sed": "allow",
        "sleep": "allow",
        "sort": "allow",
        "split": "allow",
        "tail": "allow",
        "tee": "allow",
        "touch": "allow",
        "tr": "allow",
        "uniq": "allow",
        "wc": "allow"
      },
      "external_directory": "deny"
    }
  }
