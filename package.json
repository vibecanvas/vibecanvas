{
  "name": "vibecanvas",
  "version": "0.1.2",
  "private": true,
  "description": "Run your agents in an infinite canvas",
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "catalog": {
    "@automerge/automerge": "3.2.4",
    "@automerge/automerge-repo": "2.5.3",
    "@automerge/automerge-repo-network-websocket": "2.5.3",
    "@orpc/client": "1.13.5",
    "@orpc/contract": "1.13.5",
    "@orpc/server": "1.13.5",
    "@opencode-ai/sdk": "1.2.10",
    "drizzle-kit": "0.31.9",
    "drizzle-orm": "0.45.1",
    "drizzle-zod": "0.8.3",
    "typescript": "5.9.3",
    "zod": "4.3.6"
  },
  "scripts": {
    "test": "bun test",
    "test:binary": "bun run scripts/test-binary.ts",
    "build": "bun run scripts/build.ts",
    "build:single": "bun run scripts/build.ts --single",
    "web:dev": "bun --filter @vibecanvas/web dev",
    "web:build": "bun --filter @vibecanvas/web build",
    "publish:npm": "bun run scripts/publish-npm.ts",
    "release:github": "bun run scripts/release.ts",
    "version:update": "bun run scripts/update-version.ts",
    "dev": "bun run --parallel --filter '*' dev",
    "client:dev": "cd apps/spa && bun run dev",
    "server:dev": "cd apps/server && bun run --watch src/main.ts serve",
    "server:prod": "NODE_ENV=production cd apps/server && bun run --watch src/main.ts serve --port 7496"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "bun-types": "^1.3.9"
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.1.2",
    "handlebars": "^4.7.8"
  }
}
